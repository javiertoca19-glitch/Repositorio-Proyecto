  <!-- SCRIPT -->
  <script>
    // ======= Datos iniciales =======
    const PRODUCTS = [
      { id: 'pasta', title: 'Pasta Carbonara', country: 'Italia üáÆüáπ', price: 38000, desc: 'Pasta con panceta y parmesano.', type: 'platillo' },
      { id: 'sushi', title: 'Sushi Mix', country: 'Jap√≥n üáØüáµ', price: 52000, desc: 'Nigiri y makis de salm√≥n.', type: 'platillo' },
      { id: 'limonada', title: 'Limonada de Fresa', country: 'Colombia üá®üá¥', price: 7000, desc: 'Refrescante con pur√© de fresa.', type: 'bebida' },
      { id: 'tiramisu', title: 'Tiramis√∫', country: 'Italia üáÆüáπ', price: 14000, desc: 'Postre con caf√© y mascarpone.', type: 'postre' }
    ];
    let CART = {};
    const SHIPPING = 8000;

    // ======= Funciones =======
    function formatCOP(n) { return new Intl.NumberFormat('es-CO', { style: 'currency', currency: 'COP', maximumFractionDigits: 0 }).format(n); }

    function renderCards() {
      const container = document.getElementById('cards');
      container.innerHTML = '';
      PRODUCTS.forEach(p => {
        const card = document.createElement('article');
        card.className = 'bg-black/40 p-4 rounded-2xl border border-gray-700 food-glow';
        card.innerHTML = `
          <h4 class="text-xl font-bold">${p.title}</h4>
          <p class="text-sm text-gray-300">${p.country}</p>
          <p class="text-gray-400 my-2">${p.desc}</p>
          <div class="flex justify-between items-center">
            <span class="text-yellow-300 font-bold">${formatCOP(p.price)}</span>
            <button onclick="addToCart('${p.id}')" class="px-3 py-1 rounded-full bg-gradient-to-r from-yellow-400 to-orange-500 text-gray-900 font-bold">Pedir</button>
          </div>`;
        container.appendChild(card);
      });
    }

    function addToCart(id) {
      CART[id] = (CART[id] || 0) + 1;
      updateCart();
    }

    function updateCart() {
      const container = document.getElementById('cart-items');
      container.innerHTML = '';
      let subtotal = 0;
      for (const [id, qty] of Object.entries(CART)) {
        const p = PRODUCTS.find(x => x.id === id);
        if (!p) continue;
        subtotal += p.price * qty;
        const item = document.createElement('div');
        item.className = 'flex justify-between';
        item.innerHTML = `
          <span>${p.title} x${qty}</span>
          <span>${formatCOP(p.price * qty)}</span>`;
        container.appendChild(item);
      }
      if (!Object.keys(CART).length) container.textContent = 'No hay art√≠culos a√∫n.';
      document.getElementById('subtotal').textContent = formatCOP(subtotal);
      document.getElementById('grandtotal').textContent = formatCOP(subtotal + (subtotal ? SHIPPING : 0));
    }

    document.getElementById('checkout-btn').addEventListener('click', () => {
      if (!Object.keys(CART).length) return alert('Tu carrito est√° vac√≠o.');
      alert('Gracias por tu pedido. Puedes pagar v√≠a Nequi o Daviplata al n√∫mero 3148302876.');
    });

    document.getElementById('registration-form').addEventListener('submit', e => {
      e.preventDefault();
      const name = e.target.name.value;
      alert(`¬°Gracias ${name}! Registro completado.`);
      e.target.reset();
    });

    renderCards();
  </script>
